<assembly>
	<id>SNAPSHOT</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>licenses</directory>
			<outputDirectory>licenses</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>gnu-gplv2.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>src/main/resources/readme.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>org.n52.ifgicopter:*</exclude>
				<exclude>org.n52.sensorweb:52n-xml-gml-v311</exclude>
				<exclude>org.n52.sensorweb:52n-xml-sensorML-v101</exclude>
				<exclude>org.n52.sensorweb:52n-xml-sweCommon-v101</exclude>
				<exclude>org.n52.sensorweb:52n-xml-xlink-v100</exclude>
				<exclude>joda-time:*</exclude>
				<exclude>org.apache.xmlbeans:*</exclude>
				<exclude>commons-logging:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>