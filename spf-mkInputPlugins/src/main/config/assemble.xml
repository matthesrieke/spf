<assembly>
	<id>SNAPSHOT</id>
	<formats>
		<format>dir</format>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>plugins</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>config</directory>
			<outputDirectory>config</outputDirectory>
			<excludes>
				<exclude>sensorbus</exclude>
				<exclude>spf.properties</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/${native.lib.dir}</directory>
			<outputDirectory>lib/native</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>gnu-gplv2.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
	
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>
				org.n52.ifgicopter:spf-*
				</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>plugins</outputDirectory>
			<includes>
				<include>
				org.n52.ifgicopter:spf-mkInputPlugin
				</include>
			</includes>
			<excludes>
				<exclude>
				org.n52.ifgicopter:spf-*
				</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>